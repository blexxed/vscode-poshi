{
  "name": "POSHI",
  "description": "Contains the code snippets for POSHI development in VS Code editor",
  "displayName": "The POSHI snippets",
  "version": "1.1.1",
  "publisher": "lyon",
  "repository": {
    "type": "git",
    "url": "https://github.com/haoliangwu/vscode-poshi"
  },
  "scripts":{
    "compile":"./node_modules/.bin/babel src -d lib --source-maps"  
  },
  "engines": {
    "vscode": "^0.10.10"
  },
  "categories": [
    "Languages",
    "Snippets"
  ],
  "extensionDependencies": [
    "vscode.html"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./lib/index",
  "contributes": {
    "languages": [
      {
        "id": "html",
        "aliases": [
          "POSHI",
          "poshi"
        ],
        "extensions": [
          ".function",
          ".macro",
          ".testcase",
          ".path"
        ],
        "configuration": "./poshi.configuration.json"
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "vscode": "^0.11.0"
  }
}
