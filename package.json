{
  "name": "poshi",
  "description": "Contains the code snippets for POSHI development in VS Code editor",
  "displayName": "The POSHI snippets",
  "version": "1.1.1",
  "publisher": "lyon",
  "repository": {
    "type": "git",
    "url": "https://github.com/haoliangwu/vscode-poshi"
  },
  "scripts": {
    "compile": "./node_modules/.bin/babel src -d lib --source-maps"
  },
  "engines": {
    "vscode": "^0.10.10"
  },
  "categories": [
    "Languages",
    "Snippets",
    "Linters"
  ],
  "extensionDependencies": [
    "vscode.html"
  ],
  "activationEvents": [
    "onLanguage:html"
  ],
  "main": "./lib/index",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Example configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        }
      }
    },
    "languages": [
      {
        "id": "html",
        "aliases": [
          "POSHI"
        ],
        "extensions": [
          ".function",
          ".macro",
          ".testcase",
          ".path"
        ]
      }
    ],
    "snippets": [
      {
        "language": "html",
        "path": "./snippets/snippets.json"
      }
    ]
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "vscode": "^0.11.0"
  },
  "dependencies": {
    "nop": "^1.0.0",
    "vscode-languageclient": "^1.4.2",
    "vscode-languageserver": "^1.4.1"
  }
}
