{
    "name": "poshi",
    "description": "Contains the code snippets for POSHI development in VS Code editor",
    "displayName": "The POSHI snippets",
    "version": "1.1.2",
    "publisher": "lyon",
    "repository": {
        "type": "git",
        "url": "https://github.com/haoliangwu/vscode-poshi"
    },
    "scripts": {
        "compile": "./node_modules/.bin/babel src -d lib --source-maps",
        "watch": "./node_modules/.bin/gulp compile"
    },
    "engines": {
        "vscode": "^0.10.10"
    },
    "categories": [
        "Languages",
        "Snippets",
        "Linters"
    ],
    "extensionDependencies": [
        "vscode.html"
    ],
    "activationEvents": [
        "onLanguage:html"
    ],
    "main": "./lib/index",
    "contributes": {
        "commands": [
            {
                "command": "POSHI.demo",
                "title": "Hello World"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "POSHI extension configuration",
            "properties": {
                "liferay.project.home": {
                    "type": "string",
                    "default": "/home/lyon/liferay/portal/portal-6210",
                    "description": "The absolute project path of Liferay Portal."
                },
                "poshi.home": {
                    "type": "string",
                    "default": "/portal-web/test/functional/com/liferay/portalweb",
                    "description": "The relative project path of Liferay Portal."
                }
            }
        },
        "languages": [
            {
                "id": "html",
                "aliases": [
                    "POSHI"
                ],
                "extensions": [
                    ".function",
                    ".macro",
                    ".testcase",
                    ".path"
                ],
                "configuration": "./poshi.configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "html",
                "path": "./snippets/snippets.json"
            }
        ]
    },
    "devDependencies": {
        "babel-cli": "^6.6.5",
        "babel-preset-es2015": "^6.6.0",
        "gulp": "^3.9.1",
        "gulp-babel": "^6.1.2",
        "gulp-plumber": "^1.1.0",
        "gulp-watch": "^4.3.5",
        "vscode": "^0.11.0"
    },
    "dependencies": {
        "nop": "^1.0.0",
        "vscode-languageclient": "^1.4.2",
        "vscode-languageserver": "^1.4.1"
    }
}